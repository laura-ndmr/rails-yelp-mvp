<div class="container">

<h2>Edit restaurants</h2>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit class: 'btn btn-primary' %>

<%= link_to 'Show', @restaurant %> |
<%= link_to 'Back', restaurants_path %>
<% end %>
</div>
